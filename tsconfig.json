{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "strict": true
  },
  "include": ["./lib"],
  "exclude": ["./node_modules", "./lib/__tests__/**/*"],
  "allowImportingTsExtensions": true
}
