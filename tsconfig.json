{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["./lib"],
  "exclude": ["./node_modules"],
  "allowImportingTsExtensions": true
}
